    { "path": "/api/social/agent-auto?CRON_SECRET=super-long-random-string", "schedule": "50 22 * * 0-6" },
    { "path": "/api/social/agent-auto?CRON_SECRET=super-long-random-string", "schedule": "5 0 * * 0-6" },
    { "path": "/api/social/agent-auto?CRON_SECRET=super-long-random-string", "schedule": "15 2 * * 0-6" },
