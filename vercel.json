    { "path": "/api/social/sections/seed?type=rankings", "schedule": "0 17 * * 3" },
    { "path": "/api/social/sections/seed?type=news",     "schedule": "30 16 * * 4,5" },
    { "path": "/api/social/sections/seed?type=injuries", "schedule": "30 21 * * 4,5" },
