    { "path": "/api/social/agent-auto?CRON_SECRET=super-long-random-string", "schedule": "10 14 * * 0-6" },
    { "path": "/api/social/agent-auto?CRON_SECRET=super-long-random-string", "schedule": "20 16 * * 0-6" },
